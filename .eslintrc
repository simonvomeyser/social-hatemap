{
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "$": true,
        "module": true,
        "alertify": true,
        "datatables": true,
        "require": true,
        "React": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true 
      }
    },
    "rules" : {
        "no-console" : "warn",
        "semi" : [0, "always"],
        "comma-dangle" : 0
    },

    "plugins": [
        "react"
    ]
}